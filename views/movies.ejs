<html>
    <head>
        <title>Movie App</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <link rel="stylesheet" href="/stylesheets/design.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    </head>
    <body>
        <h1 id="searchHeading">Serach Result <span style="color: gray;">></span> <%= searchQuery.toUpperCase()%></h1>


        <% data["results"].forEach((movie)  =>{ %>
            <div class="card mb-5 w-75">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="https://image.tmdb.org/t/p/w600_and_h900_bestv2<%=movie["poster_path"]%>" class="card-img img-fluid">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h2 class="card-title"><%=movie["original_title"]%></h2>
                            <hr>
                            <p class="card-text"><%= movie["overview"]%></p>
                            <hr>
                            <br>
                            <p class="card-text"><b>Date Published : </b><%= movie["release_date"]%></p>
                            <p class="card-text"><b>Total Votes : </b><%= movie["vote_count"]%></p>
                            <p class="card-text"><b>Average Rating : </b><%= movie["vote_average"]%></p>
                        </div>
                    </div>
                </div>
            </div>
    
        <% }) %>
    </body>
</html>